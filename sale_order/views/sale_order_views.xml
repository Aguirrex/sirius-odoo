<odoo>
  <record id="view_sale_order_form_inherit" model="ir.ui.view">
    <field name="name">sale.order.form.inherit.quindicolor</field>
    <field name="model">sale.order</field>
    <field name="inherit_id" ref="sale.view_order_form"/>
    <field name="arch" type="xml">
    <!-- Agregar zona de entrega y vendedor a la vista de orden de venta -->
      <xpath expr="//field[@name='partner_id']" position="after">
          <field name="x_delivery_zone"/>
          <field name="user_id" string="Vendedor"/>
      </xpath>
      <xpath expr="//button[contains(@name, 'open_quotation_builder')]" position="attributes">
        <attribute name="invisible">1</attribute>
      </xpath>
      <!-- Ocultar botÃ³n "Quote Builder" en portal -->
      <template id="portal_quote_content_inherit" inherit_id="sale.portal_quote">
            <xpath expr="//a[contains(@href, 'quotation-builder')]" position="attributes">
                <attribute name="t-if">False</attribute>
            </xpath>
      </template>
    </field>
  </record>
</odoo>
