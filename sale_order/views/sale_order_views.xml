<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_quindicolor_sale_order_form" model="ir.ui.view">
        <field name="name">quindicolor.sale.order.form</field>
        <field name="model">quindicolor.sale.order</field>
        <field name="arch" type="xml">
            <form>
                <header style="background-color:#FF6F00;color:#FFFFFF">
                    <button string="Confirmar" type="object" name="action_confirm" states="draft" class="btn-primary"/>
                    <button string="Cancelar" type="object" name="action_cancel" states="draft,confirm" class="btn-secondary"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <field name="name" readonly="1"/>
                        <field name="date"/>
                        <field name="customer_id"/>
                        <field name="business_line"/>
                    </group>
                    <notebook>
                        <page string="Productos">
                            <field name="product_line_ids">
                                <tree editable="bottom">
                                    <field name="product_id"/>
                                    <field name="description"/>
                                    <field name="quantity"/>
                                    <field name="price_unit"/>
                                    <field name="subtotal" readonly="1"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Notas">
                            <field name="notes"/>
                        </page>
                    </notebook>
                    <group class="mt16">
                        <field name="total_amount" readonly="1" style="font-weight:bold;font-size:1.1em;"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_quindicolor_sale_order" model="ir.actions.act_window">
        <field name="name">Ã“rdenes de Venta</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">quindicolor.sale.order</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_quindicolor_root" name="Quindicolor" sequence="10"/>
    <menuitem id="menu_quindicolor_sale_order" name="Ventas" parent="menu_quindicolor_root" action="action_quindicolor_sale_order"/>
</odoo>