<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Vista de formulario -->
    <record id="view_quindicolor_sale_order_form" model="ir.ui.view">
        <field name="name">quindicolor.sale.order.form</field>
        <field name="model">quindicolor.sale.order</field>
        <field name="arch" type="xml">
            <form>
                <header style="background-color:#FF6F00;color:#FFFFFF">
                    <button string="Confirmar" type="object" name="action_confirm"
                            states="draft"
                            class="btn-primary"
                            attrs="{'invisible': [('product_line_ids', '=', [])]}"/>
                    <button string="Cancelar" type="object" name="action_cancel"
                            states="draft,confirm"
                            class="btn-secondary"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <field name="name" readonly="1"/>
                        <field name="date"/>
                        <field name="customer_id"/>
                        <field name="business_line"/>
                    </group>
                    <notebook>
                        <page string="Productos">
                            <field name="product_line_ids">
                                <tree editable="bottom">
                                    <field name="product_id"/>
                                    <field name="description"/>
                                    <field name="quantity"/>
                                    <field name="price_unit"/>
                                    <field name="subtotal" readonly="1"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Notas">
                            <field name="notes"/>
                        </page>
